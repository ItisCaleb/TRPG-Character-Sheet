<!DOCTYPE html>
<html lang="en">
<head>
    <%include model/head.ejs%>
</head>
<body>
<nav>
<% include model/header.ejs%>
</nav>
<% include model/rightmenu.ejs%>
<div class="content">
<h1 style="text-align: center;line-height:40px ;">管理員發文</h1>
    <form id="post" style="width: 70%;margin: auto">
        <textarea name="content" style="width: 100%;height:400px;resize: none">
        </textarea>
        <button type="submit" class="check-btn">送出</button>
    </form>

</div>
<%include model/footer.ejs%>
</body>
<script>
    $('#post').on('submit',function (e) {
        e.preventDefault();
        $('.check-btn').prop('disabled',true);
        $.ajax({
            url:'/admin/post',
            type:'POST',
            data:$(this).serialize(),
            success:function (data) {
                good_message(data)
                setTimeout(function () {
                    redirect('/')
                }, 1000)
            },
            error: function (data) {
                bad_message(data.responseText)
                setTimeout(function () {
                    $('.check-btn').prop('disabled',false);
                },1000)
            }
        })
    })
</script>
</html>