<!DOCTYPE html>
<html lang="en">
<head>
    <%include model/head.ejs%>
    <script src="/public/js/session.js" charset="UTF-8"></script>
</head>
<body>
<nav>
<% include model/header.ejs%>

    <div id="upload-window" class="message pop" style="top: 24px;display: none">
        <div class="message-div">
            <div class="message-alert">上傳角色卡
                <div class="message-content">
                    <form id="upload-sheet-form">
                        <% if (user_status !== '你擁有的角卡都已上傳' && user_status !== '你還未擁有任何角色卡') { %>
                            <% for(var j=0;j<user_sheet_name.length;j++) { %>
                                <label style="display: inline;font-size: 14px" ><%= user_sheet_name[j] %> 系統:<%=user_system[j]%><input type="checkbox" name="upload" style="display: inline" value="<%=user_sheet_id[j]%>"></label><br>
                            <% } %>
                        <% } %>
                        <% if (user_status == '你擁有的角卡都已上傳' || user_status == '你還未擁有任何角色卡') {%>
                <p style="display: inline" ><%=user_status %></p>
                <% } %><span style="width: 100%;display: inline">
                                <% if (user_status !== '你擁有的角卡都已上傳' && user_status !== '你還未擁有任何角色卡') { %>
                                    <button  type="submit" id="upload-check">上傳</button>
                                <% } %>

                    </span>
                </form>
                    <button id="upload-disable">取消</button>
                </div>

            </div>
        </div>
    </div>
    <div id="sheet-window" class="message pop" style="top:24px;display: none">
        <div class="message-div">
            <div class="message-alert">檢閱角色卡
                <div class="message-content">
        <% if (session_status !='看來還沒有人上傳角卡') { %>
            <% for(var k=0;k<session_sheet_name.length;k++) { %>
                <p style="display: inline;font-size: 14px"><%= session_sheet_name[k] %> 系統:<%=session_system[k]%>擁有者:<%=session_sheet_player[k]%>
                    <button style="display: inline-block;width: 50px" onclick=get("/charactersheet/<%=session_sheet_id[k]%>")>檢閱</button>
                    <%if (session_sheet_access[k]==='yes') { %>
                    <button class="sheet-delete" style="display: inline-block;width: 50px;color: red" data-id="<%=session_sheet_id[k]%>">移除</button>
                    <% }%>
                </p>
                <br>
            <% } %>
        <% } %>
        <% if (session_status =='看來還沒有人上傳角卡') {%>
        <p style="display: inline" ><%=session_status%></p><br>
        <% } %>
        <button id="sheet-disable">關閉</button>
            </div>
        </div>
    </div>
    </div>
    <div id="delete-window" class="message pop" style="top:24px;display: none">
        <div class="message-div">
            <div class="message-alert"><%=dismiss%>團務
                <p class="message-content">
                    你確定要<%=dismiss%>嗎?
                </p>
                <span style="display: inline">
                    <button id="delete">確認</button>
                    <button id="delete-disable">關閉</button>
                </span>
            </div>
        </div>
    </div>
</nav>
<% include model/rightmenu.ejs%>
<div class="content">
    <h1 style="text-align: center;line-height:40px ;"><%=title%></h1>


    <div style="text-align: center">
            <% if (player[1] == null ) { %>
                <%  player.push('你還沒有玩家') %>
        <% }%>
        <div>gm:<%=player[0]%></div>
        <% if (password != 'none')  {%>
        密碼: <%=password%> <br>
                <%}%>
        玩家:
            <% for(var i=1;i<player.length;i++) { %>
                <div style="display: inline"><%= player[i] %></div>
                 <% if (password !='none' && player[1] !== '你還沒有玩家' ) { %>
                    <button class="player-delete" style="display: inline-block;width: 50px;color: red" data-id="<%=player[i]%>">剔除</button>
                 <% } %>
                    <br>
        <% }%>
        <br>
    <button id="delete-check" class="btn session" style="color: red"><%=dismiss%></button>
    <button id="upload" class="btn session">上傳角卡</button>
    <button id="sheet-show" class="btn session">檢閱角卡</button>

    </div>
</div>
<%include model/footer.ejs%>
</body>
</html>
